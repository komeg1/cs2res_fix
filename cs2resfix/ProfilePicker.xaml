<Window x:Class="cs2resfix.ProfilePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cs2resfix"
        mc:Ignorable="d"
        Title="ProfilePicker" Height="450" Width="300">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" BorderThickness="0" Text="There are multiple Steam profiles with CS2 access on your computer. Please select your SteamID.
                 If you don't know how to find it: " VerticalAlignment="Top" Width="280"/>
        <TextBlock Margin="73,58,53,334">           
        <Hyperlink NavigateUri="https://help.steampowered.com/en/faqs/view/2816-BE67-5B69-0FEC" RequestNavigate="Hyperlink_RequestNavigate">
            Check Steam support page
        </Hyperlink>
        </TextBlock>
        <StackPanel Name="sp" Margin="0,79,0,0"/>

    </Grid>
</Window>
